<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LifeStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="backgroundColor">@color/blue_background</item>
        <item name="android:windowBackground">@color/blue_background</item>

    </style>

    <style name="Theme.LifeStyle" parent="Base.Theme.LifeStyle" />

    <style name="Theme.LifeStyle.NoActionBar" parent="Base.Theme.LifeStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LifeStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LifeStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>